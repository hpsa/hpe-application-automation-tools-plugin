        </developer>
        <developer>
            <name>Romain Seguy</name>
        </developer>
        <developer>
            <id>ofirshaked</id>
            <name>Ofir Shaked</name>
        </developer>
        <developer>
            <id>amitb</id>
            <name>Amit Bezalel</name>
        </developer>
        <developer>
            <name>Daniel Schreiber</name>
            <email>daniel.schreiber@hp.com</email>
        </developer>
